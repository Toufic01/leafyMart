<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tracking_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"/>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/current_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:id="@+id/status_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="24dp"/>

        <!-- Progress Tracking Visualization -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <!-- Stage 1: Processing -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:id="@+id/stage1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/stage1"
                    android:layout_marginTop="8dp"
                    android:text="Processing"
                    android:textAlignment="center"/>
            </RelativeLayout>

            <!-- Line 1 -->
            <View
                android:id="@+id/line1"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"/>

            <!-- Stage 2: In Station -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:id="@+id/stage2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/stage2"
                    android:layout_marginTop="8dp"
                    android:text="In Station"
                    android:textAlignment="center"/>
            </RelativeLayout>

            <!-- Line 2 -->
            <View
                android:id="@+id/line2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"/>

            <!-- Stage 3: Delivery -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:id="@+id/stage3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/stage3"
                    android:layout_marginTop="8dp"
                    android:text="Delivery"
                    android:textAlignment="center"/>
            </RelativeLayout>

            <!-- Line 3 -->
            <View
                android:id="@+id/line3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:background="@color/grey"/>

            <!-- Stage 4: Delivered -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <View
                    android:id="@+id/stage4"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/circle_grey"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/stage4"
                    android:layout_marginTop="8dp"
                    android:text="Delivered"
                    android:textAlignment="center"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>