<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.BkashPaymentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Existing Bkash pay button -->
        <Button
            android:id="@+id/btnBkashPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pay with Bkash" />

        <!-- New Free Payment button -->
        <Button
            android:id="@+id/btnFreePay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Free Payment (No Charge)"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/btnTrackProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Track Product"
            android:layout_marginTop="16dp" />

    </LinearLayout>




</LinearLayout>